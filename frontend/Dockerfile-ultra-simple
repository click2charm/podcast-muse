FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Create next.config.js if not exists
RUN echo "/** @type {import('next').NextConfig} */\nconst nextConfig = {\n  experimental: {\n    appDir: true,\n  },\n  env: {\n    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL || 'http://localhost:8000',\n  },\n}\n\nmodule.exports = nextConfig" > next.config.js

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]